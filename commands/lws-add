#!/usr/bin/env node

var _ = require('lodash');
var program = require('commander');
var path = require('path');
var fs = require('fs');

var commandsList = fs.readdirSync('./commands/add');

_.forEach(commandsList, function(command) {
	program = require(path.join(__dirname, 'add', command)).registerCommand(program);
});

program.parse(process.argv);

if (!process.argv.slice(2).length) {
	program.outputHelp();
}
